{
    "manifest_version": 2,
    "name": "FlipSide",
    "description": "This is the description. WOO. :D",
    "version": "1.1",

    "browser_action": {
        "default_title": "This is the default title",
        "default_popup": "Popup.html",
        "default_icon": "Flipside.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "http://*/*", 
        "https://*/*",
        "tabs",
        "bookmarks",
        "browsingData",
        "tabCapture"
    ]
}